{
  "name": "sidevar",
  "displayName": "sideVar",
  "description": "List all variables of the current file in the sidebar — 変数はサイドバーに。",
  "version": "0.0.1",
  "icon": "assets/images/sidevar.png",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sidevar",
          "title": "SideVar",
          "icon": "assets/images/sidevar.png"
        }
      ]
    },
    "views": {
      "sidevar": [
        {
          "type": "webview",
          "id": "sidevar.view",
          "name": "SideVar View",
          "icon": "assets/images/sidevar.png"
        }
      ]
    },
    "configuration": {
      "title": "SideVar",
      "properties": {
        "sidevar.llmServerUrl": {
          "type": "string",
          "default": "http://127.0.0.1:1234/v1",
          "description": "OpenAI互換LLMサーバーのベースURL"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "openai": "^5.15.0"
  }
}
